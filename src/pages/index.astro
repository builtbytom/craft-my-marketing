---
import Layout from '../layouts/Layout.astro';
import heroData from '../content/homepage/hero.json';
import pillarsData from '../content/homepage/pillars.json';
---

<Layout title="Craft My Marketing - Your Complete Digital Department">
  <!-- Hero Section - Bold Asymmetric Design -->
  <section class="relative min-h-[85vh] flex items-center overflow-hidden bg-white">
    <!-- Animated Background -->
    <div class="absolute inset-0">
      <!-- Morphing Grid Pattern -->
      <div class="absolute inset-0 opacity-[0.06]" style="background-image: linear-gradient(#8B00FF 1px, transparent 1px), linear-gradient(90deg, #8B00FF 1px, transparent 1px); background-size: 50px 50px; animation: grid-move 20s linear infinite;"></div>
      
      <!-- Animated Mesh Gradient -->
      <div class="absolute inset-0">
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-purple/20 rounded-full filter blur-3xl animate-blob"></div>
        <div class="absolute top-1/3 right-1/4 w-96 h-96 bg-accent/15 rounded-full filter blur-3xl animate-blob animation-delay-2000"></div>
        <div class="absolute bottom-0 left-1/3 w-96 h-96 bg-blue/20 rounded-full filter blur-3xl animate-blob animation-delay-4000"></div>
      </div>
      
      <!-- Wave Pattern -->
      <svg class="absolute bottom-0 left-0 w-full h-32 opacity-5" preserveAspectRatio="none" viewBox="0 0 1440 320">
        <path fill="#8B00FF" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,154.7C960,171,1056,181,1152,165.3C1248,149,1344,107,1392,85.3L1440,64L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z" class="animate-wave"></path>
      </svg>
    </div>
    
    <!-- Geometric Accent Shapes -->
    <div class="absolute top-20 right-0 w-[600px] h-[600px] bg-purple opacity-[0.02] transform rotate-45 translate-x-64 animate-float-slow"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-accent opacity-[0.02] transform -rotate-12 -translate-x-48 animate-float-slow-delayed"></div>

    <div class="relative z-10 w-full max-w-[1600px] mx-auto px-8 lg:px-12 xl:px-16 py-20">
      <div class="grid lg:grid-cols-12 gap-12">
        <!-- Left Column - Main Content -->
        <div class="lg:col-span-8">
          <!-- Small Badge -->
          <div class="inline-flex items-center gap-3 mb-10">
            <div class="w-2 h-2 bg-accent"></div>
            <span class="text-xs font-black text-black uppercase tracking-[0.2em]">CONNECTICUT DIGITAL AGENCY</span>
          </div>

          <!-- Massive Headline -->
          <h1 class="text-[3.5rem] md:text-[4.5rem] lg:text-[5.5rem] xl:text-[7rem] font-display font-black leading-[0.85] tracking-[-0.03em] mb-10">
            <span class="text-black">WE START WITH</span>
            <br/>
            <span class="text-purple">WEBSITES, BUT</span>
            <br/>
            <span class="text-purple">BUILD WHATEVER</span>
            <br/>
            <span class="text-black">YOU NEED</span>
          </h1>

          <!-- Subheadline -->
          <p class="text-lg md:text-xl text-black/60 mb-16 max-w-xl leading-relaxed font-bold">
            Lightning-fast websites built for AI and mobile. Automation that actually works. Custom solutions when you're ready. One team for everything.
          </p>

          <!-- Staggered CTAs -->
          <div class="space-y-6">
            <div>
              <a href="/contact" class="inline-flex items-center justify-center px-12 py-6 bg-purple text-white font-black text-lg tracking-wider hover:bg-purple-dark transition-all duration-300 shadow-2xl hover:translate-x-2">
                BOOK A CALL (15 MIN, NO SALES BS)
                <svg class="w-6 h-6 ml-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
            <div class="ml-12">
              <a href="#services" class="inline-flex items-center justify-center px-12 py-6 font-black text-lg tracking-wider text-black bg-transparent border-4 border-black hover:bg-black hover:text-white transition-all duration-300">
                EXPLORE SERVICES
              </a>
            </div>
          </div>
        </div>

        <!-- Right Column - Supporting Stats -->
        <div class="lg:col-span-4 relative hidden lg:block">
          <div class="absolute bottom-0 right-0 space-y-4">
            <div class="bg-purple text-white p-6 transform hover:scale-105 transition-transform duration-300 opacity-0 animate-slide-in-1">
              <div class="text-3xl font-black">50+</div>
              <div class="text-xs uppercase tracking-[0.15em] opacity-90">PROJECTS LAUNCHED WITHOUT DRAMA</div>
            </div>
            <div class="bg-accent text-black p-6 ml-8 transform hover:scale-105 transition-transform duration-300 opacity-0 animate-slide-in-2">
              <div class="text-3xl font-black">4</div>
              <div class="text-xs uppercase tracking-[0.15em]">WEEKS FROM KICKOFF TO LAUNCH (SERIOUSLY)</div>
            </div>
            <div class="bg-blue text-white p-6 ml-16 transform hover:scale-105 transition-transform duration-300 opacity-0 animate-slide-in-3">
              <div class="text-3xl font-black">0</div>
              <div class="text-xs uppercase tracking-[0.15em]">OUTSOURCING. NO EXCUSES.</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- WHO We Serve Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-[1600px] mx-auto px-8 lg:px-12 xl:px-16">
      <div class="text-center mb-16">
        <span class="text-black/50 font-black uppercase tracking-[0.2em] text-xs">WHO WE SERVE</span>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-display font-black leading-[0.9] mt-6 mb-8">
          <span class="text-black">WE HELP ALL KINDS</span>
          <br/>
          <span class="text-purple">OF BUSINESSES</span>
        </h2>
        <p class="text-xl text-black/60 max-w-3xl mx-auto leading-relaxed">
          From solopreneurs to growing companies, we work with businesses that want to do things better.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Solo Entrepreneurs -->
        <div class="bg-white p-8 border-4 border-purple hover:shadow-2xl transition-all duration-300 group">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-purple text-white rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-black text-purple mb-2">Solo Entrepreneurs</h3>
          </div>
          <ul class="space-y-3 text-black/80 text-sm">
            <li class="flex items-start gap-2">
              <span class="text-purple font-black text-lg">•</span>
              <span>Consultants and freelancers</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-purple font-black text-lg">•</span>
              <span>Service-based professionals</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-purple font-black text-lg">•</span>
              <span>Need professional online presence</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-purple font-black text-lg">•</span>
              <span>Want to focus on their expertise</span>
            </li>
          </ul>
          <div class="mt-6 pt-6 border-t border-gray-200">
            <p class="text-purple font-bold text-sm">Examples: Coaches, designers, accountants, therapists</p>
          </div>
        </div>

        <!-- Local Businesses -->
        <div class="bg-white p-8 border-4 border-accent hover:shadow-2xl transition-all duration-300 group">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-accent text-black rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-black text-accent mb-2">Local Businesses</h3>
          </div>
          <ul class="space-y-3 text-black/80 text-sm">
            <li class="flex items-start gap-2">
              <span class="text-accent font-black text-lg">•</span>
              <span>Restaurants and retail shops</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent font-black text-lg">•</span>
              <span>Professional services</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent font-black text-lg">•</span>
              <span>Want to streamline operations</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent font-black text-lg">•</span>
              <span>Need better customer experience</span>
            </li>
          </ul>
          <div class="mt-6 pt-6 border-t border-gray-200">
            <p class="text-accent font-bold text-sm">Examples: Law firms, medical practices, contractors, restaurants</p>
          </div>
        </div>

        <!-- Growing Companies -->
        <div class="bg-white p-8 border-4 border-pink hover:shadow-2xl transition-all duration-300 group md:col-span-2 lg:col-span-1">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-pink text-white rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
            </div>
            <h3 class="text-xl font-black text-pink mb-2">Growing Companies</h3>
          </div>
          <ul class="space-y-3 text-black/80 text-sm">
            <li class="flex items-start gap-2">
              <span class="text-pink font-black text-lg">•</span>
              <span>Scaling their operations</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-pink font-black text-lg">•</span>
              <span>Too much manual work</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-pink font-black text-lg">•</span>
              <span>Need systems that grow with them</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-pink font-black text-lg">•</span>
              <span>Want competitive advantages</span>
            </li>
          </ul>
          <div class="mt-6 pt-6 border-t border-gray-200">
            <p class="text-pink font-bold text-sm">Examples: E-commerce brands, SaaS companies, manufacturing</p>
          </div>
        </div>
      </div>

      <!-- Our Approach -->
      <div class="mt-16 bg-purple/10 p-8 md:p-12 rounded-2xl border border-purple/20">
        <div class="text-center">
          <h3 class="text-2xl md:text-3xl font-black mb-4 text-purple">Our Approach</h3>
          <p class="text-xl text-black/70 leading-relaxed max-w-3xl mx-auto">
            We believe every business deserves technology that works for them, not against them. Whether you're just starting out or scaling up, we'll meet you where you are and help you get where you want to go.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Three Pillars - Angular Design -->
  <section id="services" class="py-32 bg-white relative overflow-hidden">
    <div class="max-w-[1600px] mx-auto px-8 lg:px-12 xl:px-16">
      <!-- Section Header -->
      <div class="mb-20">
        <span class="text-black/50 font-black uppercase tracking-[0.2em] text-xs">HOW WE GROW WITH YOU</span>
        <h2 class="text-5xl md:text-6xl lg:text-7xl font-display font-black mt-6 text-black leading-[0.9]">
          THE DIGITAL TEAM
          <br/>
          <span class="text-purple">YOU HIRE ONCE,</span>
          <br/>
          <span class="text-purple">THEN KEEP FOREVER</span>
        </h2>
      </div>

      <!-- Three Pillars - Vibrant Cards -->
      <div class="grid md:grid-cols-3 gap-8 items-stretch">
        <!-- Websites Card - PURPLE -->
        <div class="group relative overflow-hidden bg-purple text-white p-10 hover:shadow-2xl hover:scale-105 transition-all duration-300 flex flex-col">
          <div class="absolute top-0 right-0 w-32 h-32 bg-white opacity-10 transform rotate-45 -mr-16 -mt-16"></div>
          <div class="relative z-10">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-white mb-8">
              <svg class="w-8 h-8 text-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-black text-white mb-4 uppercase tracking-tight">Getting Started</h3>
            <p class="text-white/90 mb-8">
              Lightning-fast websites built for AI and mobile. Perfect for new businesses or established ones ready for a real web presence.
            </p>
            <ul class="space-y-3 text-sm text-white/80 mb-8">
              <li class="flex items-center">
                <div class="w-2 h-2 bg-white mr-3"></div>
                Mobile-first, AI-ready design
              </li>
              <li class="flex items-center">
                <div class="w-2 h-2 bg-white mr-3"></div>
                Loads in under 1.2 seconds
              </li>
              <li class="flex items-center">
                <div class="w-2 h-2 bg-white mr-3"></div>
                Future-proofed technology
              </li>
            </ul>
            <a href="/services/websites" class="inline-flex items-center text-white font-black uppercase tracking-wider hover:translate-x-2 transition-all">
              Learn more 
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Automation Card - LIME -->
        <div class="group relative overflow-hidden bg-accent text-black p-10 hover:shadow-2xl hover:scale-105 transition-all duration-300 flex flex-col">
          <div class="absolute top-0 right-0 w-32 h-32 bg-black opacity-10 transform rotate-45 -mr-16 -mt-16"></div>
          <div class="relative z-10">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-black mb-8">
              <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-black text-black mb-4 uppercase tracking-tight">Gaining Momentum</h3>
            <p class="text-black/80 mb-8">
              Smart automation when you're tired of doing the same tasks. System integrations when you outgrow spreadsheets.
            </p>
            <ul class="space-y-3 text-sm text-black/70 mb-8">
              <li class="flex items-center">
                <div class="w-2 h-2 bg-black mr-3"></div>
                Workflow automation that works
              </li>
              <li class="flex items-center">
                <div class="w-2 h-2 bg-black mr-3"></div>
                System integrations
              </li>
              <li class="flex items-center">
                <div class="w-2 h-2 bg-black mr-3"></div>
                Manual task elimination
              </li>
            </ul>
            <a href="/services/technology" class="inline-flex items-center text-black font-black uppercase tracking-wider hover:translate-x-2 transition-all">
              Learn more 
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Apps Card - PINK -->
        <div class="group relative overflow-hidden bg-blue text-white p-10 hover:shadow-2xl hover:scale-105 transition-all duration-300 flex flex-col">
          <div class="absolute top-0 right-0 w-32 h-32 bg-white opacity-10 transform rotate-45 -mr-16 -mt-16"></div>
          <div class="relative z-10">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-white mb-8">
              <svg class="w-8 h-8 text-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-black text-white mb-4 uppercase tracking-tight">Going Custom</h3>
            <p class="text-white/90 mb-8">
              Custom apps and tools built exactly for your workflow. Solutions that don't exist anywhere else, tailored to your business.
            </p>
            <ul class="space-y-3 text-sm text-white/80 mb-8">
              <li class="flex items-center">
                <div class="w-2 h-2 bg-white mr-3"></div>
                Custom applications
              </li>
              <li class="flex items-center">
                <div class="w-2 h-2 bg-white mr-3"></div>
                Competitive advantages
              </li>
              <li class="flex items-center">
                <div class="w-2 h-2 bg-white mr-3"></div>
                Scalable solutions
              </li>
            </ul>
            <a href="/services/technology" class="inline-flex items-center text-white font-black uppercase tracking-wider hover:translate-x-2 transition-all">
              Learn more 
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Interactive Automation Showcase -->
  <section class="py-32 bg-white relative overflow-hidden">
    <div class="max-w-[1600px] mx-auto px-8 lg:px-12 xl:px-16">
      <div class="text-center mb-20">
        <span class="text-black/50 font-black uppercase tracking-[0.2em] text-xs">AUTOMATION IN ACTION</span>
        <h2 class="text-5xl md:text-6xl lg:text-7xl font-display font-black mt-6 text-black leading-[0.9]">
          REAL BUSINESSES.
          <br/>
          <span class="text-purple">REAL AUTOMATION.</span>
        </h2>
        <p class="text-xl text-black/60 max-w-3xl mx-auto mt-8">
          Pick your industry and watch how automation transforms a typical day. See exactly how you save time and never miss opportunities.
        </p>
      </div>

      <!-- Alpine.js Interactive Component -->
      <div x-data="automationSimulator()" x-init="init()" class="relative">
        <!-- Business Type Selector -->
        <div class="flex flex-wrap justify-center gap-4 mb-12">
          <template x-for="business in businesses" :key="business.id">
            <button
              @click="selectBusiness(business)"
              :class="selectedBusiness.id === business.id ? 'bg-purple text-white shadow-xl scale-105' : 'bg-white text-black border-2 border-gray-200 hover:border-purple'"
              class="px-8 py-4 rounded-xl font-black text-lg tracking-wider transition-all duration-300"
            >
              <span class="text-3xl mr-3" x-text="business.icon"></span>
              <span x-text="business.name"></span>
            </button>
          </template>
        </div>

        <!-- Simulation Container -->
        <div class="relative bg-gray-light rounded-3xl shadow-2xl p-8 lg:p-16 border border-gray-100">
          <!-- Progress Steps (Desktop) -->
          <div class="hidden sm:flex justify-between items-center mb-16 max-w-6xl mx-auto relative">
            <template x-for="(step, index) in steps" :key="step.id">
              <div
                :class="(index <= currentStep && isRunning) ? 'opacity-100 scale-100' : 'opacity-30 scale-90'"
                class="flex flex-col items-center transition-all duration-500 z-10"
              >
                <div 
                  :class="{
                    'bg-purple text-white shadow-2xl animate-pulse': index === currentStep && isRunning,
                    'bg-accent text-black': index < currentStep && isRunning,
                    'bg-gray-200': !(index <= currentStep && isRunning)
                  }"
                  class="w-20 h-20 rounded-full flex items-center justify-center text-3xl mb-3 transition-all duration-500"
                >
                  <span x-text="step.icon"></span>
                </div>
                <span class="text-sm font-bold text-center max-w-[120px] uppercase tracking-wider" x-text="step.title"></span>
              </div>
            </template>
          </div>

          <!-- Progress Steps (Mobile) -->
          <div class="sm:hidden mb-8">
            <div class="flex justify-between items-center mb-3">
              <span class="text-sm font-bold text-black">Step <span x-text="currentStep + 1"></span> of <span x-text="steps.length"></span></span>
              <span class="text-sm text-black/60 font-bold uppercase tracking-wider" x-text="steps[currentStep]?.title"></span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
              <div 
                class="bg-purple h-3 rounded-full transition-all duration-500"
                :style="`width: ${((currentStep + 1) / steps.length) * 100}%`"
              ></div>
            </div>
          </div>

          <!-- Connection Line (Desktop only) -->
          <div class="hidden sm:block absolute top-[120px] left-32 right-32 h-1 bg-gray-200 rounded-full">
            <div 
              class="h-full bg-purple transition-all duration-1000 ease-out rounded-full"
              :style="`width: ${isRunning ? (currentStep / (steps.length - 1)) * 100 : 0}%`"
            ></div>
          </div>

          <!-- Content Area -->
          <div class="min-h-[400px] flex items-center justify-center">
            <!-- Start Button -->
            <div x-show="!isRunning && currentStep === 0" class="text-center">
              <button
                @click="runSimulation"
